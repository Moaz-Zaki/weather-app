<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Weather Dashboard</title>
<link rel="stylesheet" href="/css/style.css">
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
/>
</head>
<body>
<header>
    <h1><i class="fas fa-cloud-sun"></i> Weather Dashboard</h1>
<div style="color: rgb(0, 0, 0);">
        <h2 style="color: black;"><p id="current-day"></p><p id="current-date"></p></h2>
</header>

<div class="cards-container">
    <% weatherData.forEach(city => { %>
        <div class="weather-card <%= city.weather ? city.weather.toLowerCase() : 'unknown' %>">
            <h2><%= city.city %></h2>
            <% if(city.error){ %>
                <p class="error-message">❌</p>
            <% } else { %>
                 <img alt="Weather Icon" class="icons main-icon rotate" src="/images/sunrise.png">
                <h1 style="font: 40px;"><p><%= city.temp %>°C</p></h1>
                 <p><strong>Weather:</strong> <%= city.weather %></p>
                <p><i class="fas fa-tint"></i> Humidity: <%= city.humidity %>%</p>
                <p><i class="fas fa-wind"></i> Wind: <%= city.wind %> m/s</p>
                <p><i class="fas fa-sun"></i> Sunrise: <%= city.sunrise %></p>
                <p><i class="fas fa-moon"></i> Sunset: <%= city.sunset %></p>
            <% } %>
        </div>
    <% }) %>
</div>
</div>
<footer>
      <p>&copy; 2025 <strong>ThomasLabs</strong>. All rights reserved.</p>
    </footer>

<script>
const days = ["Sunday","Monday","Tuesday","Wednesday","Thursday","Friday","Saturday"];
const months = ["January","February","March","April","May","June","July","August","September","October","November","December"];
function updateDate() {
    const today = new Date();
    document.getElementById("current-day").innerText = days[today.getDay()];
    document.getElementById("current-date").innerText = `${months[today.getMonth()]} ${today.getDate()}, ${today.getFullYear()}`;
}
updateDate();
</script>
</body>
</html>